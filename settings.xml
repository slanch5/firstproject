<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF000000">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".uiApplication.hmactivties">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- my rest xml code-->
            <RelativeLayout
                android:id="@+id/top_bar"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/top_bar">

                <TextView
                    android:id="@+id/done"
                    android:layout_width="50dp"
                    android:layout_height="18dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="351dp"
                    android:layout_marginTop="61dp"
                    android:gravity="center_horizontal|top"
                    android:text="@string/done"
                    android:textAppearance="@style/done"
                    tools:ignore="TextSizeCheck" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="295dp">

                <View
                    android:id="@+id/me"
                    android:layout_width="412dp"
                    android:layout_height="286dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="1dp"
                    android:background="#00000000" />

                <TextView
                    android:id="@+id/jacob_west"
                    android:layout_width="40dp"
                    android:layout_height="36dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="115dp"
                    android:layout_marginTop="225dp"
                    android:layout_marginRight="85dp"
                    android:text="@string/jacob_west"
                    android:textAppearance="@style/jacob_west" />

                <ImageView
                    android:id="@+id/person_code"
                    android:layout_width="167.45dp"
                    android:layout_height="166.8dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="123dp"
                    android:layout_marginTop="49dp"
                    android:background="#00000000"
                    android:src="@drawable/marcusholloway"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="250dp">
                <RelativeLayout
                    android:id="@+id/row1"
                    android:layout_width="412dp"
                    android:layout_height="60dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:clipToOutline="true">
                    <View
                        android:id="@+id/icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="16dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/rows1"
                        />

                    <TextView
                        android:id="@+id/dark_mode"
                        android:layout_width="93dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="70dp"
                        android:layout_marginRight="257dp"
                        android:layout_marginTop="18dp"
                        android:text="@string/dark_mode"
                        android:textAppearance="@style/dark_mode" />

                    <Switch
                        android:id="@+id/mySwitch"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="350dp"
                        android:layout_marginTop="18dp"
                        android:layout_marginRight="257dp"
                        android:checked="true"
                        android:thumbTint="@color/purple_700"
                        android:trackTint="@color/purple_200" />
                </RelativeLayout>
                <View
                    android:id="@+id/seperator"
                    android:layout_width="291dp"
                    android:layout_height="4dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="68.5dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="52dp"
                    android:background="@drawable/Seperator"
                    />

                <RelativeLayout
                    android:id="@+id/row"
                    android:layout_width="412dp"
                    android:layout_height="60dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="60dp"
                    android:clipToOutline="true">
                    <View
                        android:id="@+id/icon2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="16dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/rows2"
                        />
                    <TextView
                        android:id="@+id/active_stat"
                        android:layout_width="93dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="70dp"
                        android:layout_marginRight="220dp"
                        android:layout_marginTop="18dp"
                        android:text="@string/active_stat"
                        android:textAppearance="@style/dark_mode"/>
                    <TextView
                        android:id="@+id/on"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="350dp"
                        android:layout_marginRight="25dp"
                        android:text="@string/on"
                        android:textAppearance="@style/on"
                        android:gravity="right|top"
                        />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="400dp"
                        android:layout_marginTop="23dp"
                        android:background="@colo"
                        android:contentDescription="A tiny Android icon"
                        android:src="@drawable/arrowright2"
                        app:tint="@color/gray" />

                </RelativeLayout>
                <View
                    android:id="@+id/seperator2"
                    android:layout_width="291dp"
                    android:layout_height="4dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="68.5dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="112dp"
                    android:background="@drawable/Seperator"
                    />
                <RelativeLayout
                    android:id="@+id/row3"
                    android:layout_width="412dp"
                    android:layout_height="60dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="120dp"
                    android:clipToOutline="true"
                    >
                    <View
                        android:id="@+id/icon3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="16dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/rows3"
                        />

                    <TextView
                        android:id="@+id/username"
                        android:layout_width="93dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="70dp"
                        android:layout_marginRight="220dp"
                        android:layout_marginTop="18dp"
                        android:text="@string/username"
                        android:textAppearance="@style/dark_mode"/>

                    <TextView
                        android:id="@+id/m_me_jacob_d"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="240dp"
                        android:layout_marginRight="25dp"
                        android:gravity="right|top"
                        android:text="@string/m_mejacob"
                        android:textAppearance="@style/on" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="400dp"
                        android:layout_marginTop="23dp"
                        android:background="@colo"
                        android:contentDescription="A tiny Android icon"
                        android:src="@drawable/arrowright2"
                        app:tint="@color/gray" />
                </RelativeLayout>
                <View
                    android:id="@+id/seperator3"
                    android:layout_width="291dp"
                    android:layout_height="4dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="68.5dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="172dp"
                    android:background="@drawable/Seperator"
                    />
                <RelativeLayout
                    android:id="@+id/row4"
                    android:layout_width="412dp"
                    android:layout_height="60dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="172dp"
                    android:clipToOutline="true">
                    <View
                        android:id="@+id/icon4"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="16dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/rows4"
                        />
                    <TextView
                        android:id="@+id/phone"
                        android:layout_width="93dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="70dp"
                        android:layout_marginRight="220dp"
                        android:layout_marginTop="18dp"
                        android:text="@string/phone"
                        android:textAppearance="@style/dark_mode"/>
                    <TextView
                        android:id="@+id/m_me_jacob_"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="240dp"
                        android:layout_marginRight="25dp"
                        android:text="@string/some_phone"
                        android:textAppearance="@style/on"
                        android:gravity="right|top"
                        />
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="400dp"
                        android:layout_marginTop="23dp"
                        android:background="@colo"
                        android:contentDescription="A tiny Android icon"
                        android:src="@drawable/arrowright2"
                        app:tint="@color/gray" />
                </RelativeLayout>


            </RelativeLayout>






        </LinearLayout>

    </ScrollView>
</LinearLayout>